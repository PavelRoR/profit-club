#main
	background: #545454 url(../img/backs/main.png) no-repeat center
	background-size: cover
.main-content
	padding 20px 0 50px
	min-height 100vh
	display flex
	flex-direction: column
	
	// align-items: 
	justify-content: center
	@media screen and (max-width 1199px)
		padding 100px 0
	@media screen and (max-width 767px)
		padding 60px 0
	@media screen and (max-width 560px)
		padding: 40px 0
.main-name
	display flex
	align-items: center
	justify-content: space-between
	width 100%
	max-width 975px
	margin 0 auto
.main-logo
	margin-right: 35px
	width 100%
	max-width 260px
	@media screen and (max-width 1199px)
		margin-right: 20px
	@media screen and (max-width 991px)
		max-width 130px
	@media screen and (max-width 560px)
		max-width 93px
		margin-right: 15px
.main-titles
	padding-top 40px
	@media screen and (max-width 991px)
		padding-top: 0
.main-title
	@media screen and (max-width 991px)
		height: 80px
		width auto
	@media screen and (max-width 767px)
		height: 50px
	@media screen and (max-width 386px)
		height: 30px
.main-title-2
	margin-left: 150px
	@media screen and (max-width 1199px)
		margin-left: 30px
		margin-top: 10px
	@media screen and (max-width 560px)
		margin-left: 0
.main-sutitle
	color: #fff
	text-align center
	margin 40px auto
	width 100%
	max-width 975px
	@media screen and (max-width 767px)
		text-align: left
		font-size: 26px
	@media screen and (max-width 560px)
		font-size: 20px
		margin 20px 0 30px
.button-main
	// margin-top: 40px
	// @media screen and (max-width 767px)
	// 	margin-top: 30px
	@media screen and (max-width 560px)
		margin-top: 0