#ambassador
	padding 100px 0
	background-color: #525050
	color #fff
	@media screen and (max-width 767px)
		padding 60px 0
	@media screen and (max-width 560px)
		padding: 40px 0
.amb-img
	width auto
	@media screen and (max-width 1199px)
		display block
		width 100%
		max-width 525px
		margin 0 auto
	@media screen and (max-width 991px)
		margin-bottom: 30px
		margin-left: 0
.amb-bg
	color: #73FCFF
	font-style: italic
	margin-top: 30px
.amb-title
	margin 20px 0 30px
	@media screen and (max-width 560px)
		img
			height: 38px
			width auto
	@media screen and (max-width 425px)
		img
			height: 30px
	img:last-of-type
		margin-left: 15px
		@media screen and (max-width 1199px)
			margin-top: 10px
		@media screen and (max-width 991px)
			margin-top: 0
		@media screen and (max-width 560px)
			margin-left: 73px
			margin-top: 10px
		@media screen and (max-width 425px)
			margin-left: 30px