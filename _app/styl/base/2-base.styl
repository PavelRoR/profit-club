*
	margin 0
	padding 0
	outline none
body
	font-size: 20px
	font-family: M
	color #525050
	background-color #fff
	line-height: 1.1
a
	color: #000
	&:focus
		outline: 0
		text-decoration none
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	top 0
	// z-index 60
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 0
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
		margin 0 auto
.button
	&-wrapper
		text-align center
	display inline-block
	text-align center
	margin 0 auto
	text-decoration none
	color: #fff
	width: auto
	border-radius: 50px
	font-family: I
	font-size: 30px
	font-weight: bold
	padding 27px 90px
	border 3px solid
	&:focus
		text-decoration none
		color #fff
	&:hover
		text-decoration none
		color #fff
	&-black
		color #000
		&:focus
			text-decoration none
			color #000
		&:hover
			text-decoration none
			color #000
.general-title
	text-align center
	font-size: 50px
	font-weight: 900
	margin-bottom: 20px
	color #459799
	&-grey
		text-align: left
		color #525050
		margin-bottom: 50px