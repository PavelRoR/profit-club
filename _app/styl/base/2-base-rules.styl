body
	font-size: 20px
	font-family: M
	color #525050
	background-color #fff
	line-height: 1.1
	@media screen and (max-width 560px)
		font-size: 16px
.wrapper
	overflow hidden
.content
	position relative
	z-index 60
a
	color: #000
	&:focus
		outline: 0
		text-decoration none
	&:hover
		text-decoration none
button
	border none
section
header
footer
	width 100%
	display block
.d-none
	display none !important
	@media screen and (max-width 991px)
		display block !important
.mob-none
	@media screen and (max-width 991px)
		display none